@page
@model NET5Academy.Web.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>NET5Akademi | Giriş</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @if (HttpContext.User.Identity.IsAuthenticated)
    {
        <meta http-equiv="Refresh" content="0; URL=/Admin">
    }
    <link href="" rel="nofollow" />
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/img/net5akademi_icon.jpg" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/loginv1/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/loginv1/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/loginv1/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/loginv1/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/loginv1/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/loginv1/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/lib/loginv1/css/main.css">
    <!--===============================================================================================-->
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/lib/loginv1/images/img-01.png" alt="IMG">
                </div>

                <form asp-page="Login" class="login100-form validate-form">
                    <span class="login100-form-title">
                        NET5Akademi | Giriş
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Geçerli bir e-posta giriniz">
                        <input asp-for="Username" type="text" class="input100" placeholder="E-posta">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Parola boş geçilemez">
                        <input asp-for="Password" type="password" class="input100" placeholder="Parola">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="g-recaptcha" data-sitekey="6Lcl-_QUAAAAAHGgwg2Qy-vhz7BcrLYip54XJNSj"
                         style="transform:scale(0.88);-webkit-transform:scale(0.88);transform-origin:0 0;-webkit-transform-origin:0 0; margin-left:10px;"></div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Giriş
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-danger ng-hide small">
                                <span class="ng-binding"> <strong>Hata: </strong> @Model.Message</span>
                            </div>
                        }

                        <span asp-validation-for="Username" class="text-danger"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!--<div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>-->

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/">
                            <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                            Anasayfaya geri dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/lib/loginv1/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/loginv1/vendor/bootstrap/js/popper.js"></script>
    <script src="~/lib/loginv1/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/loginv1/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/loginv1/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/lib/loginv1/js/main.js"></script>

</body>
</html>

